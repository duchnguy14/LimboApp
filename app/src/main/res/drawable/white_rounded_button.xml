<?xml version="1.0" encoding="utf-8"?>
<!-- Notes: This XML is for the rounded login button for login activity-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Notes: login button pressed-->
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/limbogreen"/>
            <stroke
                android:color="@color/black"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>

    <!--    Notes: login button not pressed-->
    <item>
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:color="@color/grey"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>



</selector>